<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text appearances -->
    <style name="TextAppearance.App.Label" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textColor">@color/text_nint</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Value" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/text_value</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Result" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/text_result</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.ResultMessage" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_result_message</item>
        <item name="android:textColor">@color/text_nint</item>
    </style>

    <!-- Button style (drawable background applied in layout) -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingLeft">@dimen/space_medium</item>
        <item name="android:paddingRight">@dimen/space_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
